<div class="col-6 text-center task">
    <div class="card">
        {{#each burger_data}}
            {{#unless this.devoured}}
                <p>{{this.id}}. {{this.burger_name}}</p>
                <form method="POST" action="/burgers/update?method=PUT">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                    <button type="submit" class="btn btn-danger">Eat Me!</button>
                </form>
            {{/unless}}
        {{/each}}
    </div>
</div>

<div class="col-6 text-center task">
    {{#each burger_data}}
        {{#if this.devoured}}
            <input type="text" class="form-control" placeholder="{{this.id}}.{{this.burger_name}}" readonly>
        {{/if}}
    {{/each}}
</div>

<div class="col-12 text-center new-entry">
    <form action="/burgers/create" method="POST">
        <input type="text" name="burger_name" class="form-control" id="add-entry" value="">
        <button type="submit" class="btn" id="add-entry-btn">+</button>
    </form>
</div>